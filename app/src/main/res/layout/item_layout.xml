<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="336.5dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:theme="@style/CardView.Light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:paddingBottom="20dp"
        >
    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:descendantFocusability="afterDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            tools:text="Fri."
            android:textColor="#030303"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09.04/ 今天"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/tvWeek"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100%"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/tvDate"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:textSize="18dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginRight="9dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/fenge"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="10dp"
        />

        <LinearLayout
            android:id="@+id/rlWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/first_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "仰卧起坐 + 跳远"
            android:layout_marginLeft="9dp"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10:30-11:30"
            android:layout_toRightOf="@+id/first_item"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_centerVertical="true"
            />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/second_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "看书"
                android:layout_marginLeft="9dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15:00-17:30"
                android:layout_toRightOf="@+id/second_item"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/third_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "复习"
                android:layout_marginLeft="9dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18:30-19:30"
                android:layout_toRightOf="@+id/third_item"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fourth_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "做作业"
                android:layout_marginLeft="9dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fourth_item"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fifth_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text = "练习听力"
                android:layout_marginLeft="9dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fifth_item"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/week_card_more"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="9dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>

