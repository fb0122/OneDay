<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hsv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="-120dp"
    android:paddingRight="-90dp"
    android:descendantFocusability="beforeDescendants"
    android:background="@drawable/listview_item_click"
    >

   <LinearLayout
        android:id="@+id/llayout_left"
        android:layout_width="120dp"
        android:layout_height="75dp" 
        android:background="@color/slide_left_green"
        android:layout_centerVertical="true"
        >

        <RelativeLayout
            android:id="@+id/delete1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/slide_left_green"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/icon_reschedule"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/slide_left_green"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_finish"
                android:gravity="center"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_intent"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="90dp"
        android:layout_centerVertical="true"
        >
	
   <TextView 
       android:id="@+id/Line"
       android:layout_width="100dp"
       android:layout_height="3dp"
       android:background="@drawable/gray_fenge"
       android:layout_marginTop="25dp"
       android:layout_marginLeft="60dp"
       android:visibility="gone"
       />
   
        
        <RelativeLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            >

            <FrameLayout
                android:id="@+id/frame_Sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvSc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="rrr"
                android:textColor="@color/black"
                android:textSize="21dp"
                style="@null"
                />

            <com.example.fb0122.oneday.weidget.MyEditText
                android:layout_marginTop="10dp"
                android:id="@+id/edit_Sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textCursorDrawable="@color/blue"
                android:background="@drawable/expand_edit_time_border"
                />

            </FrameLayout>
            

            <TextView
                android:id="@+id/tvTime"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_Sc"
                android:textColor="#646464"
                tools:text="rrr" />

            <TextView
                android:id="@+id/line"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_Sc"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tvTime"
                android:textColor="#646464"
                android:layout_marginTop="4dp"
                android:text="ä¸€" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_Sc"
                android:textColor="#646464"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/line"
                tools:text="rrr" />
        </RelativeLayout>

      <LinearLayout
        android:id="@+id/llayout_right"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <RelativeLayout
            android:id="@+id/other2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:clickable="true" 
            android:background="@color/slide_right_red"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/icon_delete"
                />
        </RelativeLayout>

    </LinearLayout>    
</RelativeLayout>
</RelativeLayout>